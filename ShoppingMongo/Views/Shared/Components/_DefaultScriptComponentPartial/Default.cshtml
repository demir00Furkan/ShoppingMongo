<script src="/cozastore-master/js/main.js"></script>
<script>
    let images = [];
    let currentIndex = 0;

    function updateCarousel() {
        const carouselInner = document.getElementById('modal-carousel-inner');
        carouselInner.innerHTML = '';
        images.forEach((img, idx) => {
            const div = document.createElement('div');
            div.className = 'carousel-item' + (idx === currentIndex ? ' active' : '');
            div.innerHTML = `<img src="${img}" class="d-block w-100 rounded" />`;
            carouselInner.appendChild(div);
        });
    }

    document.querySelectorAll('.js-show-modal1').forEach(btn => {
        btn.addEventListener('click', function (e) {
            e.preventDefault();

            const name = this.dataset.name;
            const price = this.dataset.price;
            const description = this.dataset.description;
            const img1 = this.dataset.img1;
            const img2 = this.dataset.img2;
            const img3 = this.dataset.img3;

            images = [img1, img2, img3].filter(x => x);
            currentIndex = 0;
            updateCarousel();

            document.getElementById('modal-name').innerText = name;
            document.getElementById('modal-price').innerText = price + " ₺";
            document.getElementById('modal-description').innerText = description;

            document.querySelector('.js-modal1').classList.add('show-modal1');
        });
    });

    // Modalı kapatma
    document.querySelectorAll('.js-hide-modal1').forEach(btn => {
        btn.addEventListener('click', function () {
            document.querySelector('.js-modal1').classList.remove('show-modal1');
        });
    });

    // Carousel kontrolleri
    document.getElementById('modal-carousel-prev').addEventListener('click', function (e) {
        e.preventDefault();
        if (images.length === 0) return;
        currentIndex = (currentIndex - 1 + images.length) % images.length;
        updateCarousel();
    });
    document.getElementById('modal-carousel-next').addEventListener('click', function (e) {
        e.preventDefault();
        if (images.length === 0) return;
        currentIndex = (currentIndex + 1) % images.length;
        updateCarousel();
    });
</script>
