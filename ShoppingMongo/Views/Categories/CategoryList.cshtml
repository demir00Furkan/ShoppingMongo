@model List<ShoppingMongo.Dtos.CategoryDto.ResultCategoryDto>
@{
	ViewData["Title"] = "CategoryList";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var search = Context.Request.Query["search"].ToString();
}

<div class="main-content">
	<!-- Header -->
	<header class="bg-white rounded-lg shadow p-4 mb-6 flex justify-between items-center">
		<h1 class="text-2xl font-bold text-gray-800" id="pageTitle">Kategori Yönetimi</h1>
		<div class="flex items-center space-x-4">
			<form method="get" action="/Categories/CategoryList" class="relative">
				<input type="text" name="search" value="@search" placeholder="Ara..." class="pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
				<i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
			</form>
			<a href="/Categories/CreateCategory" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center">
				<i class="fas fa-plus mr-2"></i>
				<span>Yeni Ekle</span>
			</a>
		</div>
	</header>
</div>
<div class="bg-white rounded-lg shadow overflow-hidden p-4">
	<table class="min-w-full divide-y divide-gray-200">
		<thead class="bg-gray-50">
			<tr>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kategori Adı</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kategori Alt Başlık</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kategori Fotoğraf Yolu </th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Eylemler</th>
			</tr>
		</thead>
		<tbody class="bg-white divide-y divide-gray-200">
			@foreach (var item in Model)
			{
				<tr>
					<td class="px-6 py-4 text-sm text-gray-500">@item.CategoryId</td>
					<td class="px-6 py-4 text-sm text-gray-900">@item.CategoryName</td>
					<td class="px-6 py-4 text-sm text-gray-900">@item.CategorySubTitle</td>
					<td class="px-6 py-4 text-sm text-gray-900">@item.CategoryImageUrl</td>
					<td class="px-6 py-4 text-sm font-medium">
						<a href="/Categories/UpdateCategory/@item.CategoryId" class="text-blue-600 hover:text-blue-900 mr-3">
							<i class="fas fa-edit"></i>
						</a>
						<a href="/Categories/DeleteCategory/@item.CategoryId" class="text-red-600 hover:text-red-900">
							<i class="fas fa-trash"></i>
						</a>

					</td>
				</tr>
			}
			<!-- ... -->
		</tbody>
	</table>
</div>
