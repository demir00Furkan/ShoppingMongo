@model List<ShoppingMongo.Dtos.SliderDto.ResultSliderDto>
@{
    ViewData["Title"] = "SliderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
	var search = Context.Request.Query["search"].ToString();
}

<div class="main-content">
	<!-- Header -->
	<header class="bg-white rounded-lg shadow p-4 mb-6 flex justify-between items-center">
		<h1 class="text-2xl font-bold text-gray-800" id="pageTitle">Slider Yönetimi</h1>
		<div class="flex items-center space-x-4">
			<form method="get" action="/Sliders/SliderList" class="relative">
				<input type="text" name="search" value="@search" placeholder="Ara..." class="pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
				<i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
			</form>
			<a href="/Sliders/SliderList" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg flex items-center">
				<i class="fas fa-plus mr-2"></i>
				<span>Yeni Ekle</span>
			</a>
		</div>
	</header>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden p-4">
	<table class="min-w-full divide-y divide-gray-200">
		<thead class="bg-gray-50">
			<tr>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Başlık</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Alt Başlık</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Görsel Yolu</th>
				<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Düzenle</th>
			</tr>
		</thead>
		<tbody class="bg-white divide-y divide-gray-200">
			@foreach (var item in Model)
			{
				<tr>
					<td class="px-6 py-4 text-sm text-gray-500">@item.SliderId</td>
					<td class="px-6 py-4 text-sm text-gray-900">@item.Title</td>
					<td class="px-6 py-4 text-sm text-gray-900">
						@(item.Subtitle?.Length > 30
													? item.Subtitle.Substring(0, 30) + "..."
													: item.Subtitle)
					</td>
					<td class="px-6 py-4 text-sm text-gray-900">
						@(item.ImageUrl?.Length > 30
													? item.ImageUrl.Substring(0, 30) + "..."
													: item.ImageUrl)
					</td>
					<td class="px-6 py-4 text-sm font-medium">
						<a href="/Sliders/UpdateSlider/@item.SliderId" class="text-blue-600 hover:text-blue-900 mr-3">
							<i class="fas fa-edit"></i>
						</a>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
