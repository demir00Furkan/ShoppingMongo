@model ShoppingMongo.Dtos.SliderDto.CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white rounded-lg shadow p-6 max-w-xl mx-auto">
    <h2 class="text-xl font-bold mb-4 text-gray-800">Yeni Slider Ekleme Sayfası</h2>
    <form method="post">
        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Başlık</label>
            <input type="text" asp-for="Title" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Yeni Kategori Girin">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Alt Başlık</label>
            <input type="text" asp-for="Subtitle" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Yeni Kategori Girin">
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Görsel Yolu</label>
            <input type="text" asp-for="ImageUrl" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Yeni Kategori Girin">
        </div>
        <div class="flex justify-end">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold">Oluştur</button>
        </div>
    </form>
</div>



