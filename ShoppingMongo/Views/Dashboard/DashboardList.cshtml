@{
    ViewData["Title"] = "Gösterge Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Gösterge Paneli</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-blue-500 text-white rounded-xl p-6 shadow flex flex-col items-center">
            <i class="fas fa-box fa-2x mb-2"></i>
            <div class="text-lg">Toplam Ürün</div>
            <div class="text-2xl font-bold">@ViewBag.ProductsCount</div>
        </div>
        <div class="bg-red-500 text-white rounded-xl p-6 shadow flex flex-col items-center">
            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
            <div class="text-lg">Düşük Stoklu Ürün</div>
            <div class="text-2xl font-bold">@ViewBag.LowStockCount</div>
        </div>
        <div class="bg-green-500 text-white rounded-xl p-6 shadow flex flex-col items-center">
            <i class="fas fa-tags fa-2x mb-2"></i>
            <div class="text-lg">Toplam Kategori</div>
            <div class="text-2xl font-bold">@ViewBag.TotalCategories</div>
        </div>
        <div class="bg-yellow-400 text-white rounded-xl p-6 shadow flex flex-col items-center">
            <i class="fas fa-print fa-2x mb-2"></i>
            <div class="text-lg">Talebi Yüksek Ürünlerin Sayısı</div>
            <div class="text-2xl font-bold">@ViewBag.Talep</div>
        </div>
    </div>
</div>

<div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-700">Son Eklenen 3 Ürün</h2>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Ad</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Fiyat</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Tarih</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Resim</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in ViewBag.ProductsLast3)
                {
                    <tr>
                        <td class="px-4 py-2">@item.ProductName</td>
                        <td class="px-4 py-2">@item.ProductPrice ₺</td>
                        <td class="px-4 py-2">@item.ProductCreateDate</td>
                        <td class="px-4 py-2">
                            @if (!string.IsNullOrEmpty(item.ProductImageUrl1))
                            {
                                <img src="@item.ProductImageUrl1" alt="Ürün" class="w-12 h-12 object-cover rounded" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>